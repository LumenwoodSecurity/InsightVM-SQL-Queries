WITH asset_vulnerabilities AS (
    SELECT
        fav.asset_id,
        COUNT(DISTINCT fav.vulnerability_id) AS vulnerability_count
    FROM
        fact_asset_vulnerability_instance fav
    WHERE
        fav.date = (CURRENT_DATE - INTERVAL '30 days') -- exactly 30 days ago
    GROUP BY
        fav.asset_id
