    SELECT
        DISTINCT asset_id
    FROM
        dim_asset_service_configuration
    WHERE
        lower(name) LIKE '%ssl.cert.not.valid.after'
        AND cast(value AS DATE) > (CURRENT_DATE - INTERVAL '30 days') -- valid 30 days ago
        AND cast(value AS DATE) <= CURRENT_DATE -- but not valid now
),
